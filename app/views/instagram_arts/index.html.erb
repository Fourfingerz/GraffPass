<h1>Listing instagram_arts</h1>

<% for instagram_arts in @instagram_arts.nearbys(10) %>
  <li><%= link_to instagram_arts.address, instagram_arts %> (<%= instagram_arts.distance.round(2) %> miles)</li>
<% end %>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Date found</th>
      <th>Tags</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instagram_arts.each do |instagram_art| %>
      <tr>
        <td><%= instagram_art.image_url %></td>
        <td><%= instagram_art.date_found %></td>
        <td><%= instagram_art.tags %></td>
        <td><%= instagram_art.distance_to(”Eiffel Tower”) %></td>
        <td><%= link_to 'Show', instagram_art %></td>
        <td><%= link_to 'Edit', edit_instagram_art_path(instagram_art) %></td>
        <td><%= link_to 'Destroy', instagram_art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instagram art', new_instagram_art_path %>
